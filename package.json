{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for a react based project using webpack and sass",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack & npm run build-css",
    "start": "node server.js & npm run watch-css",
    "build-css": "node-sass --include-path scss scss/main.scss index.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "author": "Kumar Animesh",
  "license": "ISC",
  "dependencies": {
    "jquery": "^2.2.2",
    "react": "^0.14.7",
    "react-addons-update": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-icons": "^1.0.3",
    "react-router": "^2.0.0",
    "express": "^4.12.3",
    "morgan": "^1.5.2",
    "webpack-dev-middleware": "^1.0.11",
    "webpack-hot-middleware": "^2.10.0"
  },
  "devDependencies": {
    "babel-core": "^6.5.1",
    "babel-loader": "^6.2.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "http-server": "^0.8.5",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.1",
    "webpack": "^1.12.13"
  }
}
